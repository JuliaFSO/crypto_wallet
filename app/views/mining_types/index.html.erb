<% if notice %>
  <div id="notice", class="alert alert-dismissible fade show", role="alert">
    <p><%= notice %></p>
    <a href data-bs-dismiss="alert" aria-label="Close" style="text-decoration: none">
      x
    </a>
  </div>
<% end %>

<h1><%= MiningType.model_name.human(count: @mining_types.count) %></h1>

<table class="table table-striped table-hover">
  <thead>
    <tr>
      <th><%= @mining_types.human_attribute_name(:description)%></th>
      <th><%= @mining_types.human_attribute_name(:acronym)%></th>
      <th colspan="3"><%= link_to t('links.new_mining_type'), new_mining_type_path, class: "btn btn-primary" %></th>
    </tr>
  </thead>

  <tbody>
    <% @mining_types.each do |mining_type| %>
      <tr>
        <td><%= mining_type.description %></td>
        <td><%= mining_type.acronym %></td>
        <td><%= link_to t('links.show'), mining_type %></td>
        <td><%= link_to t('links.edit'), edit_mining_type_path(mining_type) %></td>
        <td><%= link_to t('links.delete'), mining_type, method: :delete, data: { confirm: t('messages.confirm') } %></td>
      </tr>
    <% end %>
  </tbody>
</table>
